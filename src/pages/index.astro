---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import QuemSomos from '../components/QuemSomos.astro';
import Servicos from '../components/Servicos.astro';
import Certificacoes from '../components/Certificacoes.astro';
import Depoimentos from '../components/Depoimentos.astro';
import Contato from '../components/Contato.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

// SEO Meta Tags
const title = "Sabores do Mundo | Restaurante Buffet & Panquecas Internacionais";
const description = "Restaurante especializado em buffet de almoço e panquecas internacionais para jantar. Sabores únicos que despertam seus sentidos. Venha experimentar!";
const keywords = "restaurante, buffet, panquecas internacionais, almoço, jantar, comida internacional, gastronomia, sabores do mundo";
---

<Layout title={title} description={description} keywords={keywords}>
  <Header />
  <main>
    <Welcome />
    <QuemSomos />
    <Servicos />
    <Certificacoes />
    <Depoimentos />
    <Contato />
  </main>
  <Footer />
  <WhatsAppButton />
</Layout>