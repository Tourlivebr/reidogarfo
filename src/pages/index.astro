---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import QuemSomos from '../components/QuemSomos.astro';
import Servicos from '../components/Servicos.astro';
import Certificacoes from '../components/Certificacoes.astro';
import Depoimentos from '../components/Depoimentos.astro';
import Contato from '../components/Contato.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

// SEO Meta Tags Otimizados
const title = "Rei do Garfo - Restaurante Buffet de Almoço e Panquecas Internacionais | São Paulo";
const description = "Descubra o Rei do Garfo: o melhor restaurante de São Paulo com buffet variado no almoço e panquecas internacionais no jantar. Sabores únicos, ambiente acolhedor e experiência gastronômica inesquecível. Faça sua reserva!";
const keywords = "restaurante são paulo, buffet almoço, panquecas internacionais, comida internacional, gastronomia, rei do garfo, reservas restaurante, jantar romântico, almoço executivo, culinária mundial, restaurante zona sul, melhor buffet sp";
---

<Layout 
  title={title} 
  description={description} 
  keywords={keywords}
  author="Rei do Garfo Restaurante"
  ogType="website"
>
  <Header />
  <main>
    <Welcome />
    <QuemSomos />
    <Servicos />
    <Certificacoes />
    <Depoimentos />
    <Contato />
  </main>
  <Footer />
  <WhatsAppButton />
</Layout>