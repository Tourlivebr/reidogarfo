---
import { Image } from 'astro:assets';
import fachada from '../assets/fachada_rg.jpg';
---

<section id="inicio" class="min-h-screen relative overflow-hidden">
  <!-- Background com gradiente e padr√£o -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-chocolate via-wine-red to-rich-brown"></div>
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.1"><circle cx="30" cy="30" r="2"/></g></svg>'); background-size: 60px 60px;"></div>
  </div>
  
  <!-- Elementos flutuantes decorativos -->
  <div class="absolute top-20 left-10 animate-float">
    <div class="w-16 h-16 bg-golden-yellow/20 rounded-full blur-xl"></div>
  </div>
  <div class="absolute top-40 right-20 animate-float" style="animation-delay: -2s;">
    <div class="w-24 h-24 bg-warm-orange/20 rounded-full blur-xl"></div>
  </div>
  <div class="absolute bottom-32 left-1/4 animate-float" style="animation-delay: -4s;">
    <div class="w-20 h-20 bg-golden-yellow/20 rounded-full blur-xl"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 py-20 flex items-center min-h-screen">
    <div class="grid lg:grid-cols-2 gap-12 items-center w-full">
      
      <!-- Conte√∫do Principal -->
      <div class="text-center lg:text-left space-y-8">
        <div class="space-y-4">
          <h1 class="text-6xl lg:text-7xl font-display font-bold text-cream leading-tight">
            Rei do
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-golden-yellow to-warm-orange animate-pulse-slow">
              Garfo
            </span>
          </h1>
          <p class="text-xl lg:text-2xl text-cream/90 font-light">
            Onde cada refei√ß√£o √© uma viagem gastron√¥mica
          </p>
        </div>

        <div class="space-y-6">
          <div class="flex flex-col sm:flex-row gap-4 items-center justify-center lg:justify-start">
            <div class="bg-gradient-to-r from-warm-orange to-golden-yellow p-4 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div class="text-center sm:text-left">
              <h3 class="text-xl font-semibold text-golden-yellow">Buffet de Almo√ßo</h3>
              <p class="text-cream/80">Variedade infinita, sabores √∫nicos</p>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 items-center justify-center lg:justify-start">
            <div class="bg-gradient-to-r from-wine-red to-deep-red p-4 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </div>
            <div class="text-center sm:text-left">
              <h3 class="text-xl font-semibold text-golden-yellow">Panquecas Internacionais</h3>
              <p class="text-cream/80">Jantares especiais do mundo todo</p>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
          <a 
            href="#cardapio" 
            class="group bg-gradient-to-r from-golden-yellow to-warm-orange hover:from-warm-orange hover:to-golden-yellow text-white font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
          >
            <span class="flex items-center justify-center gap-2">
              Ver Card√°pio
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
          <a 
            href="#contato" 
            class="group border-2 border-golden-yellow text-golden-yellow hover:bg-golden-yellow hover:text-dark-chocolate font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105"
          >
            <span class="flex items-center justify-center gap-2">
              Fazer Reserva
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </span>
          </a>
        </div>
      </div>

      <!-- Imagem/Ilustra√ß√£o do Lado Direito -->
 <div class="relative">
    <div class="relative z-10 bg-gradient-to-br from-cream/10 to-golden-yellow/10 backdrop-blur-sm rounded-3xl p-2 border border-golden-yellow/20">

      <!-- üñºÔ∏è Imagem da fachada preenchendo o espa√ßo -->
      <Image
        src={fachada}
        alt="Rei do Garfo - Restaurante"
        class="rounded-2xl w-full h-full object-cover" 
      />
    </div>
    </div>
  </div>

  <!-- Indicador de scroll -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
    <a href="#quem-somos" class="text-golden-yellow hover:text-warm-orange transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>