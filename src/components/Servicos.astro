---
const almoco = [
  {
    titulo: "Buffet Brasileiro",
    descricao: "Pratos tradicionais da culinária brasileira com ingredientes frescos e temperos especiais.",
    icone: "brazil",
    preco: "R$ 35,90"
  },
  {
    titulo: "Buffet Internacional",
    descricao: "Sabores do mundo todo em um só lugar. Pratos asiáticos, europeus e americanos.",
    icone: "world",
    preco: "R$ 42,90"
  },
  {
    titulo: "Buffet Vegetariano",
    descricao: "Opções deliciosas e nutritivas para quem busca uma alimentação mais saudável.",
    icone: "leaf",
    preco: "R$ 32,90"
  }
];

const jantar = [
  {
    titulo: "Panquecas Francesas",
    descricao: "Crepes delicados com recheios doces e salgados, preparados na hora.",
    icone: "france",
    preco: "R$ 28,90"
  },
  {
    titulo: "Panquecas Americanas",
    descricao: "Fluffy pancakes com xarope de bordo, frutas vermelhas e chantilly.",
    icone: "usa",
    preco: "R$ 24,90"
  },
  {
    titulo: "Panquecas Japonesas",
    descricao: "Dorayaki e panquecas soufflé com recheios únicos e apresentação especial.",
    icone: "japan",
    preco: "R$ 32,90"
  }
];
---

<section id="cardapio" class="py-20 bg-gradient-to-br from-rich-brown/5 to-warm-orange/5">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-5xl font-display font-bold text-dark-chocolate mb-4">
        Nosso 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-warm-orange to-deep-red">
          Cardápio
        </span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-warm-orange to-golden-yellow rounded-full mx-auto mb-6"></div>
      <p class="text-xl text-rich-brown/80 max-w-2xl mx-auto">
        Descubra sabores únicos que vão despertar todos os seus sentidos
      </p>
    </div>

    <!-- Buffet de Almoço -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 bg-gradient-to-r from-golden-yellow to-warm-orange text-white px-6 py-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <h3 class="text-2xl font-display font-bold">Buffet de Almoço</h3>
        </div>
        <p class="text-rich-brown/70 mt-4">Servido das 11h30 às 15h00</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {almoco.map(item => (
          <div class="group bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-lg hover:shadow-2xl hover:transform hover:scale-105 transition-all duration-300 border border-golden-yellow/20">
            <div class="text-center mb-6">
              <div class="w-20 h-20 mx-auto bg-gradient-to-br from-golden-yellow to-warm-orange rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                {item.icone === 'brazil' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {item.icone === 'world' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                )}
                {item.icone === 'leaf' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                  </svg>
                )}
              </div>
              <h4 class="text-xl font-display font-bold text-dark-chocolate mb-2">{item.titulo}</h4>
              <p class="text-rich-brown/80 mb-4">{item.descricao}</p>
              <div class="text-2xl font-bold text-warm-orange">{item.preco}</div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Panquecas para Jantar -->
    <div>
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 bg-gradient-to-r from-wine-red to-deep-red text-white px-6 py-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
          <h3 class="text-2xl font-display font-bold">Panquecas Internacionais</h3>
        </div>
        <p class="text-rich-brown/70 mt-4">Servido das 18h00 às 23h00</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {jantar.map(item => (
          <div class="group bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-lg hover:shadow-2xl hover:transform hover:scale-105 transition-all duration-300 border border-wine-red/20">
            <div class="text-center mb-6">
              <div class="w-20 h-20 mx-auto bg-gradient-to-br from-wine-red to-deep-red rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                {item.icone === 'france' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                )}
                {item.icone === 'usa' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                )}
                {item.icone === 'japan' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                )}
              </div>
              <h4 class="text-xl font-display font-bold text-dark-chocolate mb-2">{item.titulo}</h4>
              <p class="text-rich-brown/80 mb-4">{item.descricao}</p>
              <div class="text-2xl font-bold text-deep-red">{item.preco}</div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-dark-chocolate to-wine-red rounded-3xl p-8 text-white">
        <h3 class="text-3xl font-display font-bold mb-4">Pronto para uma experiência única?</h3>
        <p class="text-xl mb-6 opacity-90">Faça sua reserva e venha descobrir os sabores do mundo</p>
        <a 
          href="#contato" 
          class="inline-flex items-center gap-2 bg-gradient-to-r from-golden-yellow to-warm-orange hover:from-warm-orange hover:to-golden-yellow text-white font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-xl"
        >
          Fazer Reserva Agora
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>