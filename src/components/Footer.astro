---
import { Image } from 'astro:assets';
import logoReiDoGarfo from '../assets/logo_reidogarfob.png';

const menuItems = [
  { href: "#inicio", text: "Início" },
  { href: "#quem-somos", text: "Nossa História" },
  { href: "#cardapio", text: "Cardápio" },
  { href: "#especialidades", text: "Especialidades" },
  { href: "#depoimentos", text: "Depoimentos" },
  { href: "#contato", text: "Reservas" },
];

const redesSociais = [
  { nome: "Instagram", url: "https://www.instagram.com/reidogarfo", icon: "instagram" },
  { nome: "Facebook", url: "https://www.facebook.com/reidogarfo", icon: "facebook" },
  { nome: "WhatsApp", url: "https://wa.me/5554999999999", icon: "whatsapp" },
];

const horarios = [
  { dia: "Terça a Quinta", horario: "11h30 - 23h00" },
  { dia: "Sexta e Sábado", horario: "11h30 - 00h00" },
  { dia: "Domingo", horario: "11h30 - 22h00" },
  { dia: "Segunda", horario: "Fechado" },
];
---

<footer class="bg-gradient-to-br from-dark-chocolate to-wine-red text-white">
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      
      <!-- Logo e Descrição -->
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <div class="group-hover:scale-110 transition-transform duration-300">
            <Image
              src={logoReiDoGarfo}
              alt="Rei do Garfo - Restaurante"
              class="h-16 w-auto object-contain"
            />
          </div>
          <div>
            <h3 class="text-xl font-display font-bold text-golden-yellow">Rei do Garfo</h3>
            <p class="text-sm text-cream/80">Restaurante & Panquecaria</p>
          </div>
        </div>
        <p class="text-cream/90 text-sm leading-relaxed">
          Uma experiência gastronômica única que une sabores do mundo todo em um ambiente acolhedor e familiar.
        </p>
        
        <!-- Redes Sociais -->
        <div class="flex space-x-4 pt-4">
          {redesSociais.map(rede => (
            <a
              href={rede.url}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-white/10 hover:bg-golden-yellow/20 p-3 rounded-full transition-all duration-300 transform hover:scale-110"
              aria-label={rede.nome}
            >
              {rede.icon === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              
              {rede.icon === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
              )}
              
              {rede.icon === 'whatsapp' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Links Rápidos -->
      <div>
        <h4 class="text-golden-yellow font-display font-bold text-lg mb-6">Links Rápidos</h4>
        <ul class="space-y-3">
          {menuItems.map(item => (
            <li>
              <a
                href={item.href}
                class="text-cream/90 hover:text-golden-yellow transition-colors duration-300 text-sm flex items-center gap-2 group"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
                {item.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Horários -->
      <div>
        <h4 class="text-golden-yellow font-display font-bold text-lg mb-6">Horários</h4>
        <div class="space-y-3">
          {horarios.map(item => (
            <div class="flex justify-between items-center text-sm">
              <span class="text-cream/90">{item.dia}</span>
              <span class="text-golden-yellow font-medium">{item.horario}</span>
            </div>
          ))}
        </div>
        
        <div class="mt-6 p-4 bg-white/10 rounded-lg border border-golden-yellow/20">
          <p class="text-xs text-cream/80 mb-2">Reservas recomendadas</p>
          <p class="text-sm font-semibold text-golden-yellow">Especialmente aos finais de semana</p>
        </div>
      </div>
      
      <!-- Contato -->
      <div>
        <h4 class="text-golden-yellow font-display font-bold text-lg mb-6">Contato</h4>
        <div class="space-y-4 text-sm">
          <div class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-golden-yellow mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div class="text-cream/90">
              <p>Rua dos Sabores, 123 - Centro</p>
              <p>Três Coroas - RS, 95660-000</p>
            </div>
          </div>
          
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-golden-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p class="text-cream/90">(54) 99999-9999</p>
          </div>
          
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-golden-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <p class="text-cream/90">contato@reidogarfo.com.br</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Linha divisória e copyright -->
    <div class="border-t border-cream/20 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm">
        <p class="text-cream/80">
          &copy; {new Date().getFullYear()} Rei do Garfo. Todos os direitos reservados.
        </p>
        <p class="mt-4 md:mt-0 text-cream/80">
          Desenvolvido com ❤️ para despertar seus sentidos
        </p>
      </div>
    </div>
  </div>
  
  <!-- Elementos decorativos -->
  <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-br from-golden-yellow/10 to-warm-orange/10 rounded-full blur-3xl"></div>
  <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-wine-red/10 to-deep-red/10 rounded-full blur-3xl"></div>
</footer>